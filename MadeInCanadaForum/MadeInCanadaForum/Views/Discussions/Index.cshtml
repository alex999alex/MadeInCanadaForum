@model IEnumerable<MadeInCanadaForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<h1>Discussions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <img src="~/photos/@item.ImageFilename" alt="Discussion Image" class="card-img-top"
                        style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content</p>
                        <p class="card-text"><small class="text-muted">Created on: @item.CreateDate.ToString("g")</small>
                        </p>
                        <p class="card-text"><small class="text-muted">@item.Comments?.Count() ?? 0 comments</small></p>
                        <a asp-action="Details" asp-route-id="@item.DiscussionId" class="btn btn-primary">View
                            Discussion</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
