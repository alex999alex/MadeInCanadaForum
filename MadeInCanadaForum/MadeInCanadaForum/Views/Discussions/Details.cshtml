@model MadeInCanadaForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<h1>@Model.Title</h1>

<div>
    <h4>Content</h4>
    <hr />
    <p>@Model.Content</p>
    <h4>Location</h4>
    <p>@Model.Location</p>
    <h4>Camera</h4>
    <p>@Model.Camera</p>
    @if (!string.IsNullOrEmpty(Model.ImageFilename))
    {
        <h4>Image</h4>
        <img src="~/photos/@Model.ImageFilename" alt="Discussion Image" style="width: 300px; height: auto;" />
    }
</div>

<h4>Comments</h4>
<hr />
@foreach (var comment in Model.Comments)
{
    <div>
        <p>@comment.Content</p>
        <small>Posted on: @comment.CreateDate.ToString("g")</small>
    </div>
}

<h4>Add a Comment</h4>
<hr />
<div>
    <form asp-action="Create" asp-controller="Comments">
        <input type="hidden" name="DiscussionId" value="@Model.DiscussionId" />
        <div class="mb-3">
            <label asp-for="Content" class="control-label"></label>
            <textarea name="Content" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <input type="submit" value="Post Comment" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.DiscussionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
