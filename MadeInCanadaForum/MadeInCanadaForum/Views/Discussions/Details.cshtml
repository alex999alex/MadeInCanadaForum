@model MadeInCanadaForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<h1>Discussion Details</h1>

<div>
    <h4>Content</h4>
    <hr />
    <p>@Model.Content</p>
    <h4>Location</h4>
    <p>@Model.Location</p>
    <h4>Camera</h4>
    <p>@Model.Camera</p>
    @if (!string.IsNullOrEmpty(Model.ImageFilename))
    {
        <h4>Image</h4>
        <img src="~/photos/@Model.ImageFilename" alt="Discussion Image" style="width: 300px; height: auto;" />
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.DiscussionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
