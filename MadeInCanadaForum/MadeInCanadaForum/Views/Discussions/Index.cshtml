@model IEnumerable<MadeInCanadaForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<h1>Discussions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <a asp-action="Details" asp-route-id="@item.DiscussionId" class="card-link">
                    <div class="card discussion-card">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title" style="font-weight: bold; font-size: 1.25rem;">@item.Title</h5>
                                    <p class="card-text">@item.Content</p>
                                    <p class="card-text"><small class="text-muted">Created on:
                                            @item.CreateDate.ToString("g")</small></p>
                                    <p class="card-text"><small class="text-muted">@item.Comments?.Count() ?? 0
                                            comments</small></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <img src="~/photos/@item.ImageFilename" alt="Discussion Image" class="img-thumbnail"
                                    style="height: 100px; object-fit: cover;" />
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
